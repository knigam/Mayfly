<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keonasoft.mayfly" >

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS " />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.keonasoft.mayfly.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.keonasoft.mayfly.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mayfly_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name="com.keonasoft.mayfly.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.keonasoft.mayfly" />
            </intent-filter>
        </receiver>

        <service android:name="com.keonasoft.mayfly.GcmIntentService" />

        <activity
            android:name="com.keonasoft.mayfly.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.keonasoft.mayfly.activity.AppActivity"
            android:label="@string/title_activity_app" >
        </activity>
        <activity
            android:name="com.keonasoft.mayfly.activity.EventActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.keonasoft.mayfly.activity.NewEventActivity"
            android:label="@string/app_name" >
        </activity>

        <uses-permission android:name="android.permission.INTERNET" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.keonasoft.mayfly.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.keonasoft.mayfly.activity.InviteActivity"
            android:label="@string/title_activity_invite"
            android:parentActivityName="com.keonasoft.mayfly.activity.AppActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="AppActivity" />
        </activity>
    </application>

</manifest>
